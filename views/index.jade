extends layouts/layout.jade

block con 
  div#config-wrap

  div
    svg.icon-cog.open-config(title="设置"): use(xlink:href="svg/svg-symbols.svg#cog")

  div.container
    div.search-wrap
      form(method="get" action="{{engine.action}}")
        input(type="text" name="{{engine.field}}")
        button {{engine.name}} 一下

      div.switch-origin
        span(v-for="item in searchs" v-on:click="switch_search(item)" v-bind:class="item.name ==  engine.name ? 'active' : ''") {{item.name}}


    ul#navs
      li(v-for="item in navs")
        //- div.toolbar
          //- a(href="#" title="删除"): svg.icon-cog: use(xlink:href="svg/svg-symbols.svg#trash")
          //- a(href="#" title="编辑"): svg.icon-cog: use(xlink:href="svg/svg-symbols.svg#pencil")
        a(href="{{item.link}}" title="{{item.name}}") {{item.name}}

